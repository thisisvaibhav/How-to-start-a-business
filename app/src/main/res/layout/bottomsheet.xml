<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

   android:background="@color/fback">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fback"
        android:paddingTop="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".StickerPackInfoActivity"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/su"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/googlefont"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="@string/appversion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/googlefont"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="The Avion Apps Company"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:alpha="0.8"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/googlefont"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q1" />

        <TextView
            android:alpha="0.8"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/googlefont"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q2" />

        <TextView
            android:alpha="0.8"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/googlefont"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q3" />

        <TextView
            android:alpha="0.8"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/googlefont"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q4" />

        <TextView
            android:alpha="0.8"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/googlefont"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:fontFamily="@font/googleregular"
                android:text="Support"
                android:textColor="@color/fontcolor"
                android:textSize="26sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardMaxElevation="7dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/raate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_weight="1.5"
                            android:alpha="0.60"
                            android:src="@drawable/ratte" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/googlefont"
                            android:text="Rate Us on Google PlayStore"
                            android:textColor="@color/back" />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.15"
                        android:background="@color/ggray" />

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_weight="1.5"
                            android:alpha="0.60"
                            android:src="@drawable/share" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/googlefont"
                            android:text="Invite Your Friends"
                            android:textColor="@color/back" />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.15"
                        android:background="@color/ggray" />

                    <LinearLayout
                        android:id="@+id/dm"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_weight="1.5"
                            android:alpha="0.60"
                            android:src="@drawable/message" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/googlefont"
                            android:text="Dm us On Instagram"
                            android:textColor="@color/back" />


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/googleregular"
                android:text="Request Topic"
                android:textColor="@color/fontcolor"
                android:textSize="26sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardMaxElevation="7dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">



                    <EditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:hint="Topic" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:hint="Extra topic Detail" />






                    <ImageButton
                        android:background="@color/white"
                        android:id="@+id/sendff"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/feedback" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/googleregular"
                android:text="Legal"
                android:textColor="@color/fontcolor"
                android:textSize="26sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardMaxElevation="7dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/policy"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_weight="1.5"
                            android:alpha="0.60"
                            android:src="@drawable/policy" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/googlefont"
                            android:text="Privacy Policy"
                            android:textColor="@color/back" />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.15"
                        android:background="@color/ggray" />

                    <LinearLayout
                        android:id="@+id/us"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_weight="1.5"
                            android:alpha="0.60"
                            android:src="@drawable/about" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/googlefont"
                            android:text="About Us"
                            android:textColor="@color/back" />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.15"
                        android:background="@color/ggray" />

                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22dp"
                            android:layout_weight="1.5"
                            android:alpha="0.60"
                            android:src="@drawable/content" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/googlefont"
                            android:text="About Content"
                            android:textColor="@color/back" />


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?actionBarItemBackground"
                android:background="@drawable/circle"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/moreapp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/playstore"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:foreground="?actionBarItemBackground"
                android:background="@drawable/circlepl"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/rate"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:src="@drawable/play"
                    />
            </FrameLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/copyright"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlefont"
                android:text="All Copyright are Reserved"
                android:textColor="@color/back"
                android:textSize="14sp"
                android:textStyle="normal" />


        </LinearLayout>




    </LinearLayout>
</androidx.core.widget.NestedScrollView>